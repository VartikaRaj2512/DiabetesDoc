<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtAge"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:hint="Age"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="number"
        tools:ignore="HardcodedText" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtHeight"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/edtAge"
        android:layout_marginTop="16dp"
        android:hint="Height"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="number"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtBP"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/edtHeight"
        android:layout_marginTop="16dp"
        android:hint="B.P."
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="number"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtBloodSugar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/edtBP"
        android:layout_marginTop="16dp"
        android:hint="BloodSugar"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="number"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtApetite"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/edtBloodSugar"
        android:layout_marginTop="16dp"
        android:hint="Apetite(High(2)/low(1)/Neutral(0)"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="number"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtThirst"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/edtApetite"
        android:layout_marginTop="16dp"
        android:hint="Thirst(High(2)/low(1)/Neutral(0)"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="number"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtVision"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/edtThirst"
        android:layout_marginTop="16dp"
        android:hint="Vision(Blur(1)/Normal(0)"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="number"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtWeight"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/edtVision"
        android:layout_marginTop="16dp"
        android:hint="Weight"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btnScore"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="SCORE"
        android:textSize="18sp"
        app:backgroundTint="#1130DD"
        app:layout_constraintTop_toBottomOf="@id/edtWeight"
        tools:layout_editor_absoluteX="16dp" />
    <ImageView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:src="@drawable/appicon"
        app:layout_constraintTop_toBottomOf="@id/btnScore"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="87dp"
        tools:ignore="MissingConstraints" />





</androidx.constraintlayout.widget.ConstraintLayout>